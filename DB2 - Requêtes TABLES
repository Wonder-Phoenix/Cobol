#********************************************************************************************************************#
#  ÉNONCÉ : Requêtes sur les tables EMPLOYE et DEPARTEMENT                                                           #
#********************************************************************************************************************#

-- LISTE DES EMPLOYES TRAVAILLANT DANS LE DEPARTEMENT P01
  SELECT * FROM EMPLOYE WHERE NOD = 'P01';

-- LISTE DES EMPLOYES AYANT UN SALAIRE > 10000
  SELECT * FROM EMPLOYE WHERE SAL > 10000;

-- LISTE DES EMPLOYES AYANT UN SALAIRE > 10000 TRIE SUR LE SALAIRE
  SELECT * FROM EMPLOYE WHERE SAL > 10000
         ORDER BY SAL;

-- LISTE DES EMPLOYES AYANT UN SALAIRE COMPRIS ENTRE 9000 ET 11000
  SELECT * FROM EMPLOYE WHERE SAL BETWEEN 9000 AND 11000;

-- LISTE DES EMPLOYES AYANT UNE COMMISSION NON RENSEIGNEE
  SELECT * FROM EMPLOYE WHERE COM IS NULL;

-- LISTE DES EMPLOYES DONT LE NOM COMMENCE PAR 'D'
  SELECT * FROM EMPLOYE WHERE NOM LIKE 'D%';

-- LISTE DES EMPLOYES DONT LE NOM CONTIENT UN 'A'
  SELECT * FROM EMPLOYE WHERE NOM LIKE '%A%';

-- LISTE DES EMPLOYES DONT LE NOM CONTIENT UN 'A' EN 2EME POSITION
  SELECT * FROM EMPLOYE WHERE NOM LIKE '_A%';

-- LISTE DES EMPLOYES DONT LE NOM CONTIENT UN 'D' EN 1ERE POSITION OU UN 'A' EN 2EME POSITION
  SELECT * FROM EMPLOYE WHERE NOM LIKE 'D%'
                           OR NOM LIKE '_A%';

-- LISTE LES NOMS ET MATRICULE DE TOUS LES EMPLOYES, TRIES SUR LE NOM
  SELECT NOM, MAT FROM EMPLOYE
         ORDER BY NOM;

-- LISTE DES EMPLOYES ENTRES APRES 2000
  SELECT * FROM EMPLOYE WHERE YEAR(DAT) > 2000;

-- LISTE DES EMPLOYES ENTRES LE 20 JUIN
  SELECT * FROM EMPLOYE WHERE MONTH(DAT) = 6 AND DAY(DAT) = 20;

-- CALCULER LA SOMME DES SALAIRES
  SELECT SUM(SAL) AS SOMME_SALAIRES FROM EMPLOYE;

-- CALCULER LA SOMME DES SALAIRES PAR DEPARTEMENT ET AFFICHER UNIQUEMENT LES DEPARTEMENTS DONT LA SOMME EST > 15000
  SELECT SUM(SAL), NOD FROM EMPLOYE
         GROUP BY NOD
         HAVING SUM(SAL) > 15000;


-- LISTER LES NOMS DES EMPLOYES ET LES NOM DES DEPARTEMENTS AUXQUELS ILS APPARTIENNENT
-- 1ERE FACON : UTILISATION DU WHERE
  SELECT NOM, NDE FROM EMPLOYE, DEPARTEMENT
         WHERE EMPLOYE.NOD = DEPARTEMENT.NOD
         ORDER BY NDE, NOM;

-- 2EME FACON : UTILISATION DU JOIN
  SELECT NOM, NDE FROM EMPLOYE JOIN DEPARTEMENT
         ON EMPLOYE.NOD = DEPARTEMENT.NOD
         ORDER BY NDE, NOM;

